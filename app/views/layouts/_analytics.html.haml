- if Rails.env.production?
  - has_current_user = current_user != nil
  - browser_locale = request.env['HTTP_ACCEPT_LANGUAGE']
  - browser_language = browser_locale ? browser_locale.scan(/^[a-z]{2}/).first : "";
  - current_language = locale[0...2]

